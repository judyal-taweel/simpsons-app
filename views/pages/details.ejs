<!DOCTYPE html>
<html lang="en">
    <%-include(../layout/head.ejs)%>

<body>

    <%-include(../layout/header.ejs)%>


    <main>
        <div class="detailsdiv">
        <% results.forEach(elem =>{%>
           <h3><%=elem.character%></h3>
           <p><%=elem.quote%></p>
           <img src="<%=elem.image%>" alt="">

           <form action="/favorite-quotes/<%=elem.id%>?_method=PUT" method="POST">
            <input type="text" name="character" value="<%=elem.character%>">
            <input type="text" name="quote" value="<%=elem.quote%>">
            <input type="text" name="image" value="<%=elem.image%>">
            <button type="submit">update</button>
        </form>

        <form action="/favorite-quotes/<%=elem.id%>?_method=DELETE" method="POST">
            <button type="submit">delete</button>

        </form>
    </div>
    <%})%>
</body>
</html>